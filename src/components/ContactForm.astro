---
import { actions } from "astro:actions";
---

<section
  id="contact"
  class="py-20 bg-gray-900 text-white relative overflow-hidden"
>
  <!-- Decorative background elements -->
  <div
    class="absolute top-0 left-0 w-64 h-64 bg-[var(--primary)]/20 rounded-full blur-3xl -translate-x-1/2 -translate-y-1/2"
  >
  </div>
  <div
    class="absolute bottom-0 right-0 w-96 h-96 bg-[var(--secondary)]/10 rounded-full blur-3xl translate-x-1/3 translate-y-1/3"
  >
  </div>

  <div class="container mx-auto px-6 relative z-10">
    <div
      class="max-w-4xl mx-auto bg-gray-800/50 backdrop-blur-lg rounded-2xl shadow-2xl p-8 md:p-12 border border-gray-700"
    >
      <div class="text-center mb-10">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          Start Your Transformation
        </h2>
        <p class="text-gray-400 text-lg">
          Ready to build the outdoor kitchen of your dreams? Fill out the form
          below and we'll get in touch.
        </p>
      </div>

      <div
        id="success-message"
        class="hidden bg-green-500/20 border border-green-500 text-green-300 p-6 rounded-lg text-center mb-8 animate-fade-in"
      >
        <p class="font-semibold text-xl">Thank you!</p>
        <p id="success-text">
          We've received your message and will contact you shortly.
        </p>
      </div>

      <div
        id="error-message"
        class="hidden bg-red-500/20 border border-red-500 text-red-300 p-6 rounded-lg text-center mb-8 animate-fade-in"
      >
        <p class="font-semibold text-xl">Error</p>
        <p id="error-text">Something went wrong. Please try again.</p>
      </div>

      <form id="contact-form" class="space-y-6" method="POST">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label
              for="name"
              class="block text-sm font-medium text-gray-400 mb-2">Name</label
            >
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full bg-gray-900/50 border border-gray-600 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-[var(--primary)] focus:ring-1 focus:ring-[var(--primary)] transition-colors"
              placeholder="John Doe"
            />
          </div>
          <div>
            <label
              for="email"
              class="block text-sm font-medium text-gray-400 mb-2">Email</label
            >
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full bg-gray-900/50 border border-gray-600 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-[var(--primary)] focus:ring-1 focus:ring-[var(--primary)] transition-colors"
              placeholder="john@example.com"
            />
          </div>
        </div>

        <div>
          <label
            for="phone"
            class="block text-sm font-medium text-gray-400 mb-2"
            >Phone (Optional)</label
          >
          <input
            type="tel"
            id="phone"
            name="phone"
            class="w-full bg-gray-900/50 border border-gray-600 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-[var(--primary)] focus:ring-1 focus:ring-[var(--primary)] transition-colors"
            placeholder="(555) 123-4567"
          />
        </div>

        <div>
          <label
            for="message"
            class="block text-sm font-medium text-gray-400 mb-2">Message</label
          >
          <textarea
            id="message"
            name="message"
            required
            rows="4"
            class="w-full bg-gray-900/50 border border-gray-600 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-[var(--primary)] focus:ring-1 focus:ring-[var(--primary)] transition-colors"
            placeholder="Tell us about your project..."></textarea>
        </div>

        <button
          type="submit"
          id="submit-button"
          class="w-full bg-[var(--primary)] hover:bg-[var(--secondary)] text-white font-bold py-4 rounded-lg transition-all transform hover:-translate-y-1 shadow-lg hover:shadow-[var(--primary)]/30 disabled:opacity-50 disabled:cursor-not-allowed flex justify-center items-center"
        >
          <span id="button-text">Send Message</span>
          <svg
            id="loading-spinner"
            class="hidden animate-spin -ml-1 mr-3 h-5 w-5 text-white"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
          >
            <circle
              class="opacity-25"
              cx="12"
              cy="12"
              r="10"
              stroke="currentColor"
              stroke-width="4"></circle>
            <path
              class="opacity-75"
              fill="currentColor"
              d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
            ></path>
          </svg>
        </button>
      </form>
    </div>
  </div>
</section>

<!-- Turnstile Modal Overlay -->
<div
  id="turnstile-modal"
  class="fixed inset-0 bg-black/70 backdrop-blur-sm z-50 p-4"
  style="display: none;"
>
  <div
    class="bg-gray-800 rounded-2xl shadow-2xl p-8 max-w-md w-full border border-gray-700"
  >
    <h3 class="text-2xl font-bold mb-4 text-white text-center">
      Security Verification
    </h3>
    <p class="text-gray-400 mb-6 text-center">
      Please complete the security check to send your message.
    </p>
    <div class="flex justify-center mb-4">
      <div id="turnstile-widget"></div>
    </div>
    <button
      id="turnstile-modal-close"
      class="hidden mt-4 w-full bg-gray-700 hover:bg-gray-600 text-white font-medium py-3 rounded-lg transition-colors"
    >
      Close
    </button>
  </div>
</div>

<!-- Cloudflare Turnstile Script -->
<script
  src="https://challenges.cloudflare.com/turnstile/v0/api.js?render=explicit"
  async
  defer></script>

<script>
  import { actions } from "astro:actions";

  // TypeScript declarations for Cloudflare Turnstile
  interface TurnstileOptions {
    sitekey: string;
    theme?: "light" | "dark" | "auto";
    callback?: (token: string) => void;
    "error-callback"?: () => void;
    "expired-callback"?: () => void;
  }

  interface Turnstile {
    render: (
      container: HTMLElement | string,
      options: TurnstileOptions
    ) => string;
    reset: (widgetId: string) => void;
    ready: (callback: () => void) => void;
    remove: (widgetId: string) => void;
  }

  declare global {
    interface Window {
      turnstile?: Turnstile;
    }
  }

  const form = document.getElementById("contact-form") as HTMLFormElement;
  const successMessage = document.getElementById("success-message");
  const errorMessage = document.getElementById("error-message");
  const successText = document.getElementById("success-text");
  const errorText = document.getElementById("error-text");
  const submitButton = document.getElementById(
    "submit-button"
  ) as HTMLButtonElement;
  const buttonText = document.getElementById("button-text");
  const loadingSpinner = document.getElementById("loading-spinner");
  const turnstileModal = document.getElementById("turnstile-modal");
  const turnstileModalClose = document.getElementById("turnstile-modal-close");

  // Turnstile widget ID and token
  let turnstileWidgetId: string | null = null;
  let turnstileToken: string | null = null;
  let isSubmitting = false;

  // Show Turnstile modal and initialize widget
  function showTurnstileModal(): Promise<string> {
    return new Promise((resolve, reject) => {
      const siteKey = import.meta.env.PUBLIC_TURNSTILE_SITE_KEY;
      if (!siteKey) {
        console.error("Turnstile site key is not configured");
        reject(new Error("Turnstile configuration error"));
        return;
      }

      if (!turnstileModal) {
        reject(new Error("Turnstile modal not found"));
        return;
      }

      // Show modal with flex display
      turnstileModal.style.display = "flex";
      turnstileModal.classList.add("items-center", "justify-center");

      // Clear previous widget if exists
      const widgetContainer = document.getElementById("turnstile-widget");
      if (!widgetContainer) {
        reject(new Error("Turnstile widget container not found"));
        return;
      }

      // Reset token
      turnstileToken = null;

      // Use turnstile.ready() callback per Cloudflare documentation
      if (typeof window.turnstile === "undefined") {
        // If turnstile is not loaded yet, wait for it
        const checkTurnstile = setInterval(() => {
          if (typeof window.turnstile !== "undefined") {
            clearInterval(checkTurnstile);
            renderWidget();
          }
        }, 100);

        // Timeout after 10 seconds
        setTimeout(() => {
          clearInterval(checkTurnstile);
          if (typeof window.turnstile === "undefined") {
            reject(new Error("Turnstile script failed to load"));
          }
        }, 10000);
      } else {
        renderWidget();
      }

      function renderWidget() {
        if (!window.turnstile) {
          reject(new Error("Turnstile API not available"));
          return;
        }

        // Verify widget container still exists
        if (!widgetContainer) {
          reject(new Error("Turnstile widget container not found"));
          return;
        }

        // Clear container before rendering
        widgetContainer.innerHTML = "";

        // Use turnstile.ready() to ensure API is fully loaded
        window.turnstile.ready(() => {
          // Render Turnstile widget
          if (!widgetContainer) {
            reject(new Error("Widget container disappeared"));
            return;
          }
          turnstileWidgetId = window.turnstile!.render(widgetContainer, {
            sitekey: siteKey,
            theme: "dark",
            callback: (token: string) => {
              turnstileToken = token;
              // Hide modal and resolve with token
              hideModal();
              resolve(token);
            },
            "error-callback": () => {
              turnstileToken = null;
              reject(new Error("Turnstile verification failed"));
            },
            "expired-callback": () => {
              turnstileToken = null;
              // Don't reject on expiry, just reset
              const expiredContainer =
                document.getElementById("turnstile-widget");
              if (expiredContainer && turnstileWidgetId !== null) {
                expiredContainer.innerHTML = "";
                // Re-render widget after expiry
                if (window.turnstile) {
                  window.turnstile.ready(() => {
                    turnstileWidgetId = window.turnstile!.render(
                      expiredContainer,
                      {
                        sitekey: siteKey,
                        theme: "dark",
                        callback: (token: string) => {
                          turnstileToken = token;
                          hideModal();
                          resolve(token);
                        },
                        "error-callback": () => {
                          turnstileToken = null;
                          reject(new Error("Turnstile verification failed"));
                        },
                      }
                    );
                  });
                }
              }
            },
          });
        });
      }
    });
  }

  // Reset Turnstile widget
  function resetTurnstile() {
    if (turnstileWidgetId !== null && typeof window.turnstile !== "undefined") {
      // Use remove() to properly clean up the widget
      if (window.turnstile.remove) {
        window.turnstile.remove(turnstileWidgetId);
      }
      const widgetContainer = document.getElementById("turnstile-widget");
      if (widgetContainer) {
        widgetContainer.innerHTML = "";
      }
      turnstileWidgetId = null;
    }
    turnstileToken = null;
  }

  // Helper function to hide modal
  function hideModal() {
    if (turnstileModal) {
      turnstileModal.style.display = "none";
      turnstileModal.classList.remove("items-center", "justify-center");
    }
  }

  // Close modal handler
  if (turnstileModalClose) {
    turnstileModalClose.addEventListener("click", () => {
      hideModal();
      resetTurnstile();
      isSubmitting = false;
      if (submitButton) submitButton.disabled = false;
      if (buttonText) buttonText.textContent = "Send Message";
      if (loadingSpinner) loadingSpinner.classList.add("hidden");
    });
  }

  // Close modal on backdrop click
  if (turnstileModal) {
    turnstileModal.addEventListener("click", (e) => {
      if (e.target === turnstileModal) {
        hideModal();
        resetTurnstile();
        isSubmitting = false;
        if (submitButton) submitButton.disabled = false;
        if (buttonText) buttonText.textContent = "Send Message";
        if (loadingSpinner) loadingSpinner.classList.add("hidden");
      }
    });
  }

  if (form) {
    form.addEventListener("submit", async (e) => {
      e.preventDefault();

      if (
        !submitButton ||
        !buttonText ||
        !loadingSpinner ||
        !successMessage ||
        !errorMessage ||
        !successText ||
        !errorText
      )
        return;

      // Prevent multiple submissions
      if (isSubmitting) return;
      isSubmitting = true;

      // Hide any previous messages
      successMessage.classList.add("hidden");
      errorMessage.classList.add("hidden");

      // Validate form fields first
      const nameInput = form.querySelector(
        'input[name="name"]'
      ) as HTMLInputElement;
      const emailInput = form.querySelector(
        'input[name="email"]'
      ) as HTMLInputElement;
      const messageInput = form.querySelector(
        'textarea[name="message"]'
      ) as HTMLTextAreaElement;

      if (!nameInput?.value || !emailInput?.value || !messageInput?.value) {
        errorText.textContent = "Please fill in all required fields.";
        errorMessage.classList.remove("hidden");
        isSubmitting = false;
        return;
      }

      try {
        // Show Turnstile modal and wait for completion
        const token = await showTurnstileModal();

        // Set loading state after Turnstile completes
        submitButton.disabled = true;
        buttonText.textContent = "Sending...";
        loadingSpinner.classList.remove("hidden");

        // Submit form with Turnstile token
        const formData = new FormData(form);
        formData.append("cf-turnstile-response", token);

        const result = await actions.submitContactForm(formData);

        // Reset loading state
        submitButton.disabled = false;
        buttonText.textContent = "Send Message";
        loadingSpinner.classList.add("hidden");
        isSubmitting = false;

        // Reset Turnstile widget after submission attempt
        resetTurnstile();

        // Astro Actions wraps the response in a SafeResult with a 'data' property
        if (result.error) {
          // Handle action error
          errorText.textContent =
            result.error.message || "Something went wrong. Please try again.";
          errorMessage.classList.remove("hidden");
        } else if (result.data && result.data.success === true) {
          // Show success message
          if (result.data.message) {
            successText.textContent = result.data.message;
          }
          form.classList.add("hidden");
          successMessage.classList.remove("hidden");

          // Reset form
          form.reset();

          // Hide success message after 5 seconds
          setTimeout(() => {
            successMessage.classList.add("hidden");
            form.classList.remove("hidden");
          }, 5000);
        } else {
          // Show error message from the action response
          const errorMsg =
            result.data?.error || "Something went wrong. Please try again.";
          errorText.textContent = errorMsg;
          errorMessage.classList.remove("hidden");
        }
      } catch (error) {
        // Reset loading state
        submitButton.disabled = false;
        buttonText.textContent = "Send Message";
        loadingSpinner.classList.add("hidden");
        isSubmitting = false;

        // Reset Turnstile widget on error
        resetTurnstile();

        // Log the error for debugging
        console.error("Form submission error:", error);

        // Show error message
        if (error instanceof Error && error.message.includes("Turnstile")) {
          errorText.textContent =
            "Security verification failed. Please try again.";
        } else {
          errorText.textContent =
            "An unexpected error occurred. Please try again later.";
        }
        errorMessage.classList.remove("hidden");
      }
    });
  }
</script>
