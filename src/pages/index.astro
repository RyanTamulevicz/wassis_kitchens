---
import "@/styles/global.css";
import Layout from "@/layouts/main.astro";
import { Image } from "astro:assets";
import Navbar from "@/components/navbar";
import logo from "@/assets/wassi_logo_no_bg.png";
import Hero from "@/components/hero";
import heroImage from "@/assets/hero_image.jpg";
---

<Layout title=''>
  <main class='min-h-screen'>
    <Navbar>
      <Image src={logo} alt='Wassi Logo' width={120} height={60} />
    </Navbar>
    <section id='home'>
      <Hero>
        <Image
          src={heroImage}
          alt='Outdoor Kitchen'
          class='object-cover w-full h-full brightness-[0.7]'
          priority
        />
      </Hero>
    </section>
  </main>
</Layout>
